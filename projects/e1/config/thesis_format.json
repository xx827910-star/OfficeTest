{
  "document": {
    "page_size": "A4",
    "margins": {
      "top": 2.5,
      "bottom": 2.5,
      "left": 3.0,
      "right": 2.5
    },
    "header_distance": 1.4,
    "footer_distance": 1.3,
    "gutter": 0.5
  },

  "fonts": {
    "chinese": "宋体",
    "english": "Times New Roman"
  },

  "sizes": {
    "三号": 16,
    "小三": 15,
    "四号": 14,
    "小四": 12,
    "五号": 10.5,
    "小五": 9
  },

  "abstract": {
    "title": {
      "text": "摘 要",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": 1.0,
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "font": "宋体",
      "size": 12,
      "first_line_indent": 0,
      "alignment": "justify",
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    },
    "keywords": {
      "label_font": "宋体",
      "label_size": 12,
      "label_bold": true,
      "content_font": "宋体",
      "content_size": 12,
      "separator": "；",
      "alignment": "left",
      "hanging_indent_chars": 4,
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    },
    "page_number": {
      "style": "ROMAN",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "start_from": 1
    },
    "header": null
  },

  "abstract_en": {
    "title": {
      "text": "ABSTRACT",
      "font": "Times New Roman",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": 1.0,
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "font": "Times New Roman",
      "size": 12,
      "first_line_indent": 0,
      "alignment": "justify",
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    },
    "keywords": {
      "label_font": "Times New Roman",
      "label_size": 12,
      "label_bold": true,
      "content_font": "Times New Roman",
      "content_size": 12,
      "separator": "; ",
      "alignment": "left",
      "hanging_indent_chars": 6.5,
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0,
      "casing_rule": "capitalize_each_word"
    }
  },

  "toc": {
    "title": {
      "text": "目 录",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": 1.0,
      "space_before": 24,
      "space_after": 18
    },
    "levels": {
      "level1": {
        "font": "宋体",
        "size": 12,
        "bold": true,
        "alignment": "left",
        "line_spacing": 20,
        "space_before": 0,
        "space_after": 0,
        "left_indent_chars": 0
      },
      "level2": {
        "font": "宋体",
        "size": 12,
        "bold": false,
        "alignment": "left",
        "line_spacing": 20,
        "space_before": 0,
        "space_after": 0,
        "left_indent_chars": 2
      },
      "level3": {
        "font": "宋体",
        "size": 12,
        "bold": false,
        "alignment": "left",
        "line_spacing": 20,
        "space_before": 0,
        "space_after": 0,
        "left_indent_chars": 4
      }
    },
    "page_number": {
      "style": "ROMAN",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "start_from": 1
    }
  },

  "body": {
    "heading1": {
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "space_before": 24,
      "space_after": 12,
      "number_font": "黑体"
    },
    "heading2": {
      "font": "黑体",
      "size": 15,
      "bold": true,
      "alignment": "left",
      "space_before": 18,
      "space_after": 9,
      "number_font": "黑体"
    },
    "heading3": {
      "font": "黑体",
      "size": 14,
      "bold": true,
      "alignment": "left",
      "space_before": 12,
      "space_after": 6,
      "number_font": "黑体"
    },
    "paragraph": {
      "font": "宋体",
      "size": 12,
      "alignment": "justify",
      "first_line_indent": 2,
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    },
    "header": {
      "font": "宋体",
      "size": 9,
      "alignment": "center"
    },
    "page_number": {
      "style": "arabic",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "start_from": 1
    }
  },

  "figure": {
    "caption": {
      "font": "宋体",
      "size": 12,
      "alignment": "center",
      "number_format": "图{chapter}-{index}",
      "label_separator": " "
    },
    "numbering_format": "图{chapter}-{seq}",
    "separator": "-",
    "content_font": "宋体",
    "content_size": 12,
    "source": {
      "font": "宋体",
      "size": 9,
      "position": "bottom_left"
    },
    "spacing": {
      "before": 6,
      "after": 6
    },
    "width_in": 5
  },

  "table": {
    "caption": {
      "font": "宋体",
      "size": 12,
      "alignment": "center",
      "number_format": "表{chapter}-{index}",
      "label_separator": " "
    },
    "number_format": "表{chapter}-{seq}",
    "content_font": "宋体",
    "content_size": 12,
    "content_alignment": "center",
    "border_style": "three_line",
    "top_border": 1.5,
    "middle_border": 0.5,
    "bottom_border": 1.5,
    "source": {
      "font": "宋体",
      "size": 9,
      "position": "bottom_left"
    },
    "spacing": {
      "before": 6,
      "after": 6
    }
  },

  "formula": {
    "font": "Times New Roman",
    "size": 12,
    "alignment": "center",
    "line_spacing": 1.0,
    "number_alignment": "right",
    "number_format": "({seq})",
    "numbering_position": "right_same_line",
    "variables": {
      "style": "italic"
    },
    "constants": {
      "style": "upright"
    },
    "vectors": {
      "style": "bold_italic"
    },
    "tensors": {
      "style": "bold_upright"
    }
  },

  "references": {
    "title": {
      "text": "参 考 文 献",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "space_before": 24,
      "space_after": 18
    },
    "entry": {
      "font": "宋体",
      "size": 12,
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    },
    "number": {
      "font": "Times New Roman",
      "brackets": [
        "",
        "."
      ],
      "bold": false
    }
  },

  "acknowledgements": {
    "title": {
      "text": "致 谢",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "font": "宋体",
      "size": 12,
      "alignment": "justify",
      "first_line_indent": 2,
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    }
  },

  "appendix": {
    "title": {
      "text": "附 录",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "font": "宋体",
      "size": 12,
      "alignment": "justify",
      "first_line_indent": 2,
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    }
  },

  "footnote": {
    "font": "宋体",
    "size": 9,
    "number_style": "circled"
  }
}
