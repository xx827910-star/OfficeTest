{
  "document": {
    "page_size": "A4",
    "margins": {
      "top": 2.0,
      "bottom": 2.0,
      "left": 2.5,
      "right": 2.0
    },
    "header_distance": 1.4,
    "footer_distance": 1.3,
    "gutter": 0.5
  },
  "fonts": {
    "chinese": "宋体",
    "english": "Times New Roman"
  },
  "sizes": {
    "三号": 16,
    "小三": 15,
    "四号": 14,
    "小四": 12,
    "五号": 10.5,
    "小五": 9
  },
  "abstract": {
    "title": {
      "text": "摘 要",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": "single",
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "chinese_font": "宋体",
      "western_font": "Times New Roman",
      "size": 12,
      "line_spacing": "fixed_20pt",
      "first_line_indent": 2,
      "alignment": "justify",
      "space_before": 0,
      "space_after": 0
    },
    "keywords": {
      "label_text": "关键词：",
      "label_font": "宋体",
      "label_size": 12,
      "label_bold": true,
      "content_font": "宋体",
      "content_size": 12,
      "separator": "；",
      "hanging_indent_chars": 4,
      "line_spacing": "fixed_20pt"
    },
    "page_number": {
      "style": "roman",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "start_from": 1
    },
    "header": null
  },
  "abstract_en": {
    "title": {
      "text": "ABSTRACT",
      "font": "Times New Roman",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": "single",
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "font": "Times New Roman",
      "size": 12,
      "line_spacing": "fixed_20pt",
      "first_line_indent": 2,
      "alignment": "justify",
      "space_before": 0,
      "space_after": 0
    },
    "keywords": {
      "label_text": "Key Words:",
      "label_font": "Times New Roman",
      "label_size": 12,
      "label_bold": true,
      "content_font": "Times New Roman",
      "content_size": 12,
      "separator": ";",
      "hanging_indent_chars": 6.5,
      "casing": "title",
      "line_spacing": "fixed_20pt"
    }
  },
  "toc": {
    "title": {
      "text": "目 录",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": "single",
      "space_before": 24,
      "space_after": 18
    },
    "entry": {
      "font": "宋体",
      "size": 12,
      "line_spacing": "fixed_20pt",
      "space_before": 0,
      "space_after": 0,
      "chapter_bold": true,
      "section_indent_chars": 2,
      "subsection_indent_chars": 4
    },
    "page_number": {
      "style": "roman",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "start_from": 1
    },
    "tab_leader": "dot"
  },
  "body": {
    "heading1": {
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": "single",
      "space_before": 24,
      "space_after": 12,
      "number_format": "第{cn}章",
      "number_font": "黑体"
    },
    "heading2": {
      "font": "黑体",
      "size": 15,
      "bold": true,
      "alignment": "left",
      "line_spacing": "single",
      "space_before": 18,
      "space_after": 9,
      "number_format": "第{cn_section}节",
      "number_font": "黑体"
    },
    "heading3": {
      "font": "黑体",
      "size": 14,
      "bold": true,
      "alignment": "left",
      "line_spacing": "single",
      "space_before": 12,
      "space_after": 6,
      "number_format": "{cn_ordinal}、",
      "number_font": "黑体"
    },
    "paragraph": {
      "font": "宋体",
      "western_font": "Times New Roman",
      "size": 12,
      "alignment": "justify",
      "line_spacing": "fixed_20pt",
      "first_line_indent": 2,
      "space_before": 0,
      "space_after": 0
    },
    "list": {
      "level4": "1.",
      "level5": "（1）"
    },
    "header": null,
    "page_number": {
      "style": "arabic",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "start_from": 1
    }
  },
  "figure": {
    "caption": {
      "font": "宋体",
      "size": 12,
      "alignment": "center",
      "number_format": "图{chapter}-{index}",
      "label_separator": " "
    },
    "numbering_format": "图{chapter}-{seq}",
    "separator": "-",
    "content_font": "宋体",
    "content_size": 12,
    "source": {
      "font": "宋体",
      "size": 9,
      "position": "bottom_left"
    },
    "spacing": {
      "before": 6,
      "after": 6
    },
    "width_in": 5.0,
    "allow_global_numbering": true
  },
  "table": {
    "caption": {
      "font": "宋体",
      "size": 12,
      "alignment": "center",
      "number_format": "表{chapter}-{index}",
      "label_separator": " "
    },
    "number_format": "表{chapter}-{seq}",
    "content_font": "宋体",
    "content_size": 12,
    "content_alignment": "center",
    "border_style": "three_line",
    "top_border": 1.5,
    "middle_border": 0.5,
    "bottom_border": 1.5,
    "remove_vertical_borders": true,
    "spacing": {
      "before": 6,
      "after": 6
    }
  },
  "formula": {
    "font": "Times New Roman",
    "size": 12,
    "alignment": "center",
    "line_spacing": "single",
    "number_alignment": "right",
    "number_format": "（{seq}）",
    "numbering_position": "right_same_line",
    "chapter_based": false,
    "variable_style": "italic",
    "constant_style": "upright",
    "vector_style": "bold_italic",
    "tensor_style": "bold_upright"
  },
  "references": {
    "title": {
      "text": "参 考 文 献",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": "single",
      "space_before": 24,
      "space_after": 18
    },
    "entry": {
      "font": "宋体",
      "western_font": "Times New Roman",
      "size": 12,
      "line_spacing": "fixed_20pt",
      "space_before": 0,
      "space_after": 0
    },
    "number": {
      "font": "Times New Roman",
      "brackets": ["", "."],
      "format": "{index}.",
      "bold": false
    }
  },
  "acknowledgements": {
    "title": {
      "text": "致 谢",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": "single",
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "font": "宋体",
      "size": 12,
      "alignment": "justify",
      "first_line_indent": 2,
      "line_spacing": "fixed_20pt"
    }
  },
  "appendix": {
    "title": {
      "text": "附 录",
      "font": "黑体",
      "size": 16,
      "bold": true,
      "alignment": "center",
      "line_spacing": "single",
      "space_before": 24,
      "space_after": 18
    },
    "content": {
      "font": "宋体",
      "size": 12,
      "alignment": "justify",
      "first_line_indent": 2,
      "line_spacing": "fixed_20pt"
    }
  },
  "footnote": {
    "font": "宋体",
    "size": 9,
    "number_style": "circled"
  }
}
