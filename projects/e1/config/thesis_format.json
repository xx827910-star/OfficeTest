    "header": {
      "font": "宋体",
      "size": 9,
      "alignment": "center",
      "content": "致谢",
      "unlink_from_previous": true
    },
    "page_number": {
      "style": "arabic",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "continue_from_body": true
    }
  },

  "appendix": {
    "title": {
      "text": "附 录",
      "font": "黑体",
      "size": 16,
      "bold": false,
      "alignment": "center",
      "space_before": 24,
      "space_after": 18,
      "line_spacing": 1.0
    },
    "content": {
      "font_chinese": "宋体",
      "font_english": "Times New Roman",
      "size": 12,
      "alignment": "justify",
      "first_line_indent": 2,
      "line_spacing_rule": "fixed",
      "line_spacing": 20,
      "space_before": 0,
      "space_after": 0
    },
    "header": {
      "font": "宋体",
      "size": 9,
      "alignment": "center",
      "content": "附录",
      "unlink_from_previous": true
    },
    "page_number": {
      "style": "arabic",
      "font": "Times New Roman",
      "size": 9,
      "alignment": "center",
      "continue_from_body": true
    }
  },

  "footnote": {
    "font": "宋体",
    "size": 9,
    "number_style": "arabic"
  },

  "implementation_features": {
    "toc_clickable_links": true,
    "toc_auto_page_numbers": true,
    "toc_link_color": "000000",
    "toc_use_word_field": true,
    "figure_table_seq_fields": true,
    "reference_citation_links": true,
    "formula_omml_format": true,
    "font_separate_cjk_latin": true,
    "header_unlink_from_previous": true,
    "missing_image_placeholder": true,
    "skip_empty_paragraphs": true
  },

  "bookmarks": {
    "chapter_prefix": "_Chapter_",
    "heading_prefix": "_Heading_",
    "reference_prefix": "_Reference_",
    "citation_prefix": "_Citation_",
    "section_prefix": "_Section_"
  },

  "chinese_number_mapping": {
    "一": 1, "二": 2, "三": 3, "四": 4, "五": 5,
    "六": 6, "七": 7, "八": 8, "九": 9, "十": 10,
    "十一": 11, "十二": 12, "十三": 13, "十四": 14, "十五": 15,
    "十六": 16, "十七": 17, "十八": 18, "十九": 19, "二十": 20
  }
